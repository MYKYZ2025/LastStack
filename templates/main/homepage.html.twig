{% extends 'base.html.twig' %}

{% block title %}Space Inviters!{% endblock %}

{% block body %}
    <div class="flex">
        <aside class="hidden px-2 py-6 bg-gray-900 md:block md:w-64">
            <h2 class="px-2 mb-6 text-xl font-semibold text-white">Planets</h2>
            <div>
                {{ include('main/_planet_list.html.twig') }}
            </div>
        </aside>

        <section class="flex-1 ml-10">
            <form
                method="GET"
                action="{{ path('app_homepage') }}"
                class="flex justify-between mb-6"
            >
                <input
                    type="search"
                    name="query"
                    value="{{ app.request.query.get('query') }}"
                    aria-label="Search voyages"
                    placeholder="Search voyages"
                    class="w-1/3 px-4 py-2 text-white placeholder-gray-400 bg-gray-800 rounded"
                >
                <div class="m-2 mr-4 whitespace-nowrap">{{ voyages|length }} results</div>
            </form>
            <div class="p-4 bg-gray-800 rounded">
                <table class="w-full text-white">
                    <thead>
                        <tr>
                            <th class="py-2 text-left">Name</th>
                            <th class="py-2 pr-4 text-left">Planet</th>
                            <th class="py-2 text-left">Departing</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for voyage in voyages %}
                        <tr class="border-b border-gray-700 {% if loop.index is odd %} bg-gray-800 {% else %} bg-gray-700 {% endif %}">
                            <td class="p-4">{{ voyage.purpose }}</td>
                            <td class="px-2 whitespace-nowrap">
                                <img
                                    src="{{ asset('images/'~voyage.planet.imageFilename) }}"
                                    alt="Image of {{ voyage.planet.name }}"
                                    class="inline-block w-8 h-8 ml-2 bg-gray-600 rounded-full"
                                >
                            </td>
                            <td class="px-2 whitespace-nowrap">{{ voyage.leaveAt|ago}}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="flex items-center mt-6 space-x-4">
                <a href="#" class="block px-4 py-2 text-white bg-gray-700 rounded hover:bg-gray-600">Previous</a>
                <a href="#" class="block px-4 py-2 text-white bg-gray-700 rounded hover:bg-gray-600">Next</a>
            </div>
        </section>
    </div>
{% endblock %}
