<ul>
    {% for planet in planets %}
        <li class="mb-4 group">
            <a href="{{ path('app_planet_show', {
                'id': planet.id,
            }) }}" class="block transition duration-300 ease-in-out transform rounded hover:translate-x-1 hover:bg-gray-700">
                <div class="flex items-start justify-between p-2">
                    <div class="pr-3">
                        <span class="text-white">{{ planet.name }}</span>
                        <span class="block text-sm text-gray-400">{{ planet.lightYearsFromEarth|round|number_format }} light years</span>
                    </div>
                    <img
                        class="flex-shrink-0 w-8 h-8 transition duration-300 ease-in-out bg-gray-600 rounded-full group-hover:bg-gray-500"
                        src="{{ asset('images/'~planet.imageFilename)}}"
                        alt="Image of {{ planet.name}}"
                    >
                </div>
            </a>
        </li>
    {% endfor %}
</ul>
